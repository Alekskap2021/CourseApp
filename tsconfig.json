{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "strictBindCallApply": true,

    // Для абсолютного импорта
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "rootDirs": [".", "dts"]
  },
  "include": ["src", "dts", "configs"],

  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
